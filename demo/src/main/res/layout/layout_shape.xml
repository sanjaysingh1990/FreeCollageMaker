<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientback"
    android:orientation="vertical"
    android:padding="5dp"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- shape list 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"

            >

            <com.github.siyamed.shapeimageview.BubbleImageView
                android:id="@+id/imageview_bubble"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/demo"
                app:siArrowPosition="right"
                app:siSquare="true"
                android:clickable="true"
                />

            <View
                android:layout_width="5dp"
                android:layout_height="match_parent" />

            <com.github.siyamed.shapeimageview.RoundedImageView
                android:id="@+id/imageview_rounded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/demo"
                app:siBorderColor="@color/multiple_image_select_primary"
                app:siBorderWidth="6dp"
                app:siRadius="6dp"
                app:siSquare="true"
                android:clickable="true"

                />

        </LinearLayout>


        <!-- shape list 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"

            >

            <com.github.siyamed.shapeimageview.CircularImageView
                android:id="@+id/imageview_circle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/demo"
                app:siBorderColor="@color/multiple_image_select_primary"
                app:siBorderWidth="6dp"
                android:layout_marginTop="10dp"
                android:clickable="true"

                />

            <View
                android:layout_width="5dp"
                android:layout_height="match_parent" />

            <com.github.siyamed.shapeimageview.DiamondImageView

                android:id="@+id/imageview_diamond"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:src="@drawable/demo"
                app:siBorderColor="@color/multiple_image_select_primary"
                app:siBorderWidth="8dp"
                android:clickable="true"

                />

        </LinearLayout>


        <!-- shape list 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"

            >

            <com.github.siyamed.shapeimageview.PentagonImageView
                android:id="@+id/imageview_pentagon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:src="@drawable/demo"
                app:siBorderColor="@color/multiple_image_select_primary"
                app:siBorderWidth="8dp"
                android:clickable="true"

                />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent" />

            <com.github.siyamed.shapeimageview.HexagonImageView
                android:id="@+id/imageview_hexagon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:src="@drawable/demo"
                app:siBorderColor="@color/multiple_image_select_primary"
                app:siBorderWidth="8dp"
                android:clickable="true"

                />

        </LinearLayout>


        <!-- shape list 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"

            >

            <com.github.siyamed.shapeimageview.OctogonImageView
                android:id="@+id/imageview_octagon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:src="@drawable/demo"
                app:siBorderColor="@color/multiple_image_select_primary"
                app:siBorderWidth="8dp"
                android:clickable="true"

                />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent" />

            <com.github.siyamed.shapeimageview.StarImageView
                android:id="@+id/imageview_star"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:src="@drawable/demo"
                app:siBorderColor="@color/multiple_image_select_primary"
                app:siBorderWidth="8dp"
                android:clickable="true"

                />

        </LinearLayout>

        <!-- shape list 5 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <com.github.siyamed.shapeimageview.HeartImageView
                android:id="@+id/imageview_heart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/demo"
                app:siBorderColor="@color/multiple_image_select_primary"
                app:siBorderWidth="8dp"
                android:clickable="true"

                />

            <View
                android:layout_width="5dp"
                android:layout_height="match_parent" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
                    android:id="@+id/imageview_portershape"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/demo"
                    app:siShape="@drawable/shape_rounded_rectangle"
                    app:siSquare="true"
                    android:clickable="true"

                    />

            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>

</ScrollView>